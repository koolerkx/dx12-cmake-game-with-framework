{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Remove out dir",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    "if (Test-Path '${workspaceFolder}/out') { Remove-Item -Recurse -Force '${workspaceFolder}/out' }"
                ]
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        }
    ]
}